<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous"
        />
        <link rel="icon" href="/public/assets/favicon.png" type="image/x-icon" />
        <title>Home</title>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg bg-dark px-5 sticky-top">
            <div class="container-fluid">
                <a href="/"><img
                        class="navbar-brand"
                        src="/public/assets/logo.png"
                        alt="Rowa Bags"
                        loading="lazy"
                        height="50"
                    /></a>
                <button
                    class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNavDropdown"
                    aria-controls="navbarNavDropdown"
                    aria-expanded="false"
                    aria-label="Toggle navigation"
                >
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse fw-bold mx-5 justify-content-end" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a
                                class="nav-link dropdown-toggle text-light"
                                href="#"
                                role="button"
                                data-bs-toggle="dropdown"
                                aria-expanded="false"
                            >
                                Products
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/products">All</a></li>
                                <li><a class="dropdown-item" href="/products?category=mochilas">Mochilas</a></li>
                                <li><a class="dropdown-item" href="/products?category=riñoneras">Riñoneras</a></li>
                            </ul>
                        </li>
                        <a class="nav-link text-light" href="/products/admin" {{#unless isAuthenticated}}hidden{{/unless}}>Admin</a>
                        <a class="nav-link text-light" href="/users/profile" {{#unless isAuthenticated}}hidden{{/unless}}>Profile</a>
                        <a class="nav-link text-light" href="/users/register" {{#if isAuthenticated}}hidden{{/if}}>Register</a>
                        <a class="nav-link text-light" href="/users/login" {{#if isAuthenticated}}hidden{{/if}}>Log In</a>
                        <a class="nav-link text-light" href="/users/logout" {{#unless isAuthenticated}}hidden{{/unless}}>Log Out</a>
                    </ul>
                </div>
            </div>
        </nav>
        <main class="px-5 bg-body-secondary py-5">
            {{{body}}}
        </main>
        <footer class="px-5 bg-dark py-5 text-center">
            <a href="/"><img src="/public/assets/logo.png" alt="Rowa Bags" loading="lazy" height="50" /></a>
        </footer>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"
        ></script>
        <script
            src="https://cdn.socket.io/4.7.5/socket.io.min.js"
            integrity="sha384-2huaZvOR9iDzHqslqwpR87isEmrfxqyWOF7hr7BY6KG0+hVKLoEXMPUJw3ynWuhO"
            crossorigin="anonymous"
        ></script>
        <script src="/public/js/socket.js"></script>
    </body>
</html>