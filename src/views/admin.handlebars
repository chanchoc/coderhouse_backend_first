<h1 class="text-center mb-3 fw-bold">Administrador de productos:</h1>
<div class="d-flex flex-column flex-wrap align-items-center justify-content-center gap-3">
    <button class="btn btn-primary" type="button" data-bs-toggle="modal" data-bs-target="#createNew">Crear nuevo</button>
    <div class="modal fade" id="createNew" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title fs-4">Nuevo Producto:</h2>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form
                        class="d-flex flex-column gap-3 justify-content-center"
                        action="/products/admin"
                        method="POST"
                    >
                        <input type="text" name="title" id="title" placeholder="Title" class="form-control" required />
                        <input type="text" name="photo" id="photo" placeholder="Photo" class="form-control" />
                        <div class="input-group">
                            <span class="input-group-text">Category</span>
                            <select class="form-select form-control" name="category" id="category">
                                <option value="mochilas" selected>Mochilas</option>
                                <option value="ri単oneras">Ri単oneras</option>
                            </select>
                        </div>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input
                                type="number"
                                class="form-control"
                                placeholder="Price"
                                name="price"
                                id="price"
                                min="1"
                            />
                        </div>
                        <div class="input-group">
                            <input
                                type="number"
                                name="stock"
                                id="stock"
                                placeholder="Stock"
                                class="form-control"
                                min="1"
                            />
                            <span class="input-group-text">Units</span>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <table class="table table-striped table-hover table-bordered table-sm table-responsive">
        <thead class="table-dark">
            <tr class="text-center align-middle">
                <th scope="col">Id</th>
                <th scope="col">Photo</th>
                <th scope="col">Title</th>
                <th scope="col">Category</th>
                <th scope="col">Price</th>
                <th scope="col">Stock</th>
                <th scope="col" colspan="2">Options</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
                <tr class="align-middle">
                    <th scope="row">{{this.id}}</th>
                    <td class="text-center"><img
                            src={{this.photo}}
                            alt={{this.title}}
                            class="rounded object-fit-cover"
                            height="50"
                        /></td>
                    <td>{{this.title}}</td>
                    <td>{{this.category}}</td>
                    <td class="text-center">{{this.price}}</td>
                    <td class="text-center">{{this.stock}}</td>
                    <td class="text-center">
                        <button
                            class="btn btn-warning"
                            data-bs-toggle="modal"
                            data-bs-target="#editProduct"
                            data-info="{{json this}}"
                        >Edit</button>
                    </td>
                    <td class="text-center">
                        <form action="/products/{{this.id}}?_method=DELETE" method="POST" class="m-0">
                            <button class="btn btn-danger" type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    <div class="modal fade" id="editProduct" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title fs-4">Editar Producto:</h2>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form class="d-flex flex-column gap-3 justify-content-center" action="" method="POST" id="editForm">
                        <input
                            type="text"
                            name="title"
                            id="editTitle"
                            placeholder="Title"
                            class="form-control"
                            required
                        />
                        <div class="input-group">
                            <img src="" alt="" id="editPhotoMiniature" class="object-fit-cover rounded" height="40" />
                            <input type="text" name="photo" id="editPhoto" placeholder="Photo" class="form-control" />
                        </div>
                        <div class="input-group">
                            <span class="input-group-text">Category</span>
                            <select class="form-select form-control" name="category" id="editCategory">
                                <option value="mochilas" selected>Mochilas</option>
                                <option value="ri単oneras">Ri単oneras</option>
                            </select>
                        </div>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input
                                type="number"
                                class="form-control"
                                placeholder="Price"
                                name="price"
                                id="editPrice"
                                min="1"
                            />
                        </div>
                        <div class="input-group">
                            <input
                                type="number"
                                name="stock"
                                id="editStock"
                                placeholder="Stock"
                                class="form-control"
                                min="1"
                            />
                            <span class="input-group-text">Units</span>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Edit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/public/js/editProduct.js"></script>